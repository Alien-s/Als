<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Als.ViewModels"
                    xmlns:view="clr-namespace:Als.Views.UserControls">

    <DataTemplate DataType="{x:Type vm:UsersViewViewModel}">
        <view:UsersView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PositionsViewViewModel}">
        <view:PositionsView DataContext="{Binding}"/>
    </DataTemplate>

</ResourceDictionary>