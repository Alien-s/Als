<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="cmbDafaultStyle" TargetType="ComboBox">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="Margin" Value="10,6,10,4"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
    </Style>

    <Style x:Key="cmbCollapsedModeTriggerStyle" TargetType="ComboBox" BasedOn="{StaticResource cmbDafaultStyle}">
        <Setter Property="Visibility" Value="Collapsed"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding ElementName=chkEditModeControl, Path=IsChecked}" Value="True">
                <Setter Property="Visibility" Value="Visible"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


</ResourceDictionary>