<Application x:Class="Als.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Als.ViewModels"
             xmlns:cmd="clr-namespace:Als.Infrastructure.Commands"
             StartupUri="Views/Windows/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <vm:ViewModelLocator x:Key="Locator"/>

            <cmd:OpenWindowCommand x:Key="OpenWindowCommand"/>
            <cmd:CloseWindowCommand x:Key="CloseWindowCommand"/>
            <cmd:ExitFromApplicationCommand x:Key="ExitFromApplicationCommand"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources\Styles\Button.xaml"/>
                <ResourceDictionary Source="Resources\Styles\ComboBox.xaml"/>
                <ResourceDictionary Source="Resources\Styles\Colors.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TextBox.xaml"/>
                <ResourceDictionary Source="Resources\Styles\TextBlock.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
